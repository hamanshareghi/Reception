<div class="card card-custom ">
    <div class="card-header ribbon ribbon-clip ribbon-right">
        <div class="ribbon-target" style="top: 12px;">
            <span class="ribbon-inner bg-danger"></span>منو کاربری
        </div>
        <div class="card-title">
            <h3 class="card-label">
                خدمات
                @* <small>زیر عنوان</small>*@
            </h3>
        </div>
    </div>
    <!--begin::Body-->
    <div class="card-body" style="position: relative;">

        <div class="d-flex align-items-center mb-1">

            <!--begin::متن-->
            <div class="d-flex flex-column flex-grow-1 py-2">
                <a asp-area="UserPanel" asp-controller="Manage" asp-action="ShowInfo" class="text-dark font-weight-bold text-hover-primary font-size-lg mb-1">
                    <i class="fas fa-address-card"></i> پروفایل کاربری
                </a>

            </div>
            <!--end::متن-->

        </div>
        <div class="d-flex align-items-center mb-1">

            <!--begin::متن-->
            <div class="d-flex flex-column flex-grow-1 py-2">
                <a asp-area="UserPanel" asp-controller="Manage" asp-action="ChangePassword" class="text-dark font-weight-bold text-hover-primary font-size-lg mb-1">
                    <i class="fas fa-unlock-alt"></i> تغییر رمز عبور
                </a>

            </div>
            <!--end::متن-->

        </div>
        <div class="d-flex align-items-center mb-1">

            <!--begin::متن-->
            <div class="d-flex flex-column flex-grow-1 py-2">
                <a asp-area="UserPanel" asp-controller="Manage" asp-action="EditProfile" class="text-dark font-weight-bold text-hover-primary font-size-lg mb-1">
                    <i class="fas fa-user-edit"></i> ویرایش پروفایل
                </a>

            </div>
            <!--end::متن-->

        </div>
        <div class="d-flex align-items-center mb-1">

            <!--begin::متن-->
            <div class="d-flex flex-column flex-grow-1 py-2">
                <a asp-area="UserPanel" asp-controller="Home" asp-action="ShowOrder" class="text-dark-75 font-weight-bold text-hover-primary font-size-lg mb-1">
                    <i class="fas fa-stream"></i> سفارشات
                </a>
            </div>
            <!--end::متن-->

        </div>
        <div class="d-flex align-items-center mb-1">

            <div class="d-flex flex-column flex-grow-1 py-2">
                <a asp-area="UserPanel" asp-controller="Home" asp-action="SaleList" class="text-dark font-weight-bold text-hover-primary font-size-lg mb-1">
                    <i class="fas fa-cart-plus"></i> خریدها
                </a>

            </div>

        </div>
        <div class="d-flex align-items-center mb-1">

            <div class="d-flex flex-column flex-grow-1 py-2">
                <a asp-area="UserPanel" asp-controller="Home" asp-action="RequestCustomer" class="text-dark font-weight-bold text-hover-primary font-size-lg mb-1">
                    <i class="fas fa-list-alt"></i> درخواست ها
                </a>

            </div>

        </div>
        <div class="d-flex align-items-center mb-1">

            <!--begin::متن-->
            <div class="d-flex flex-column flex-grow-1 py-2">
                <a asp-area="UserPanel" asp-controller="Home" asp-action="ShowMessages" class="text-dark font-weight-bold text-hover-primary font-size-lg mb-1">
                    <i class="fas fa-envelope-open-text"></i> پیامک ها
                </a>

            </div>
            <!--end::متن-->

        </div>
        <div class="d-flex align-items-center mb-1">

            <!--begin::متن-->
            <div class="d-flex flex-column flex-grow-1 py-2">
                <a href="#" class="text-dark font-weight-bold text-hover-primary font-size-lg mb-1">
                    <i class="fas fa-money-bill"></i> پرداختی ها
                </a>

            </div>
            <!--end::متن-->

        </div>
        <div class="d-flex align-items-center mb-1">

            <!--begin::متن-->
            <div class="d-flex flex-column flex-grow-1 py-2">
                <a href="#" class="text-dark font-weight-bold text-hover-primary font-size-lg mb-1">
                    <i class="fas fa-clipboard-list"></i> تیکت ها
                </a>

            </div>
            <!--end::متن-->

        </div>
        @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admins"))
        {
            <div class="d-flex align-items-center mb-1">

                <!--begin::متن-->
                <div class="d-flex flex-column flex-grow-1 py-2">
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="text-dark font-weight-bold text-hover-primary font-size-lg mb-1">
                        <i class="fas fa-tachometer-alt"></i> داشبورد مدیریتی
                    </a>

                </div>
                <!--end::متن-->

            </div>
        }

        <div class="d-flex align-items-center mb-1">

            <!--begin::متن-->
            <div class="d-flex flex-column flex-grow-1 py-2">
                @*<a asp-area="" asp-controller="Account" asp-action="SignOut" class="text-dark font-weight-bold text-hover-primary font-size-lg mb-1">
                    
                </a>*@
                <form asp-area="" asp-controller="Account" asp-action="SignOut" method="post">
                    <button type="submit" class="text-dark btn btn-icon-danger  font-weight-bold text-hover-primary font-size-lg mb-1">
                        <i class="fas fa-sign-out-alt"></i> خروج
                    </button>       
                </form>
            </div>
            <!--end::متن-->

        </div>

    </div>
    <!--end::Body-->
</div>