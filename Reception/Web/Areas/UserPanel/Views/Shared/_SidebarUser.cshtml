<div class="card card-custom ">
    <div class="card-header ribbon ribbon-clip ribbon-right">
        <div class="ribbon-target" style="top: 12px;">
            <span class="ribbon-inner bg-danger"></span>منو کاربری
        </div>
        <div class="card-title">
            <h3 class="card-label">
                خدمات
                @* <small>زیر عنوان</small>*@
            </h3>
        </div>
    </div>
    <!--begin::Body-->
    <div class="card-body" style="position: relative;">



        <div class="d-flex align-items-center mb-1">

            <!--begin::متن-->
            <div class="d-flex flex-column flex-grow-1 py-2">
                <a asp-area="UserPanel" asp-controller="Manage" asp-action="ShowInfo" class="text-dark-75 font-weight-bold text-hover-primary font-size-lg mb-1">
                    پروفایل کاربری
                </a>

            </div>
            <!--end::متن-->

        </div>
        <div class="d-flex align-items-center mb-1">

            <!--begin::متن-->
            <div class="d-flex flex-column flex-grow-1 py-2">
                <a asp-area="UserPanel" asp-controller="Manage" asp-action="ChangePassword" class="text-dark-75 font-weight-bold text-hover-primary font-size-lg mb-1">
                    تغییر رمز عبور
                </a>

            </div>
            <!--end::متن-->

        </div>
        <div class="d-flex align-items-center mb-1">

            <!--begin::متن-->
            <div class="d-flex flex-column flex-grow-1 py-2">
                <a asp-area="UserPanel" asp-controller="Manage" asp-action="EditProfile" class="text-dark-75 font-weight-bold text-hover-primary font-size-lg mb-1">
                    ویرایش پروفایل
                </a>

            </div>
            <!--end::متن-->

        </div>
        <div class="d-flex align-items-center mb-1">

            <!--begin::متن-->
            <div class="d-flex flex-column flex-grow-1 py-2">
                <a asp-area="UserPanel" asp-controller="Home" asp-action="ShowOrder" class="text-dark-75 font-weight-bold text-hover-primary font-size-lg mb-1">
                    سفارشات
                </a>
            </div>
            <!--end::متن-->

        </div>
        <div class="d-flex align-items-center mb-1">

            <div class="d-flex flex-column flex-grow-1 py-2">
                <a asp-area="UserPanel" asp-controller="Home" asp-action="SaleList" class="text-dark-75 font-weight-bold text-hover-primary font-size-lg mb-1">
                    خریدها
                </a>

            </div>

        </div>
        <div class="d-flex align-items-center mb-1">

            <div class="d-flex flex-column flex-grow-1 py-2">
                <a asp-area="UserPanel" asp-controller="Home" asp-action="RequestCustomer" class="text-dark-75 font-weight-bold text-hover-primary font-size-lg mb-1">
                    درخواست ها
                </a>

            </div>

        </div>
        <div class="d-flex align-items-center mb-1">

            <!--begin::متن-->
            <div class="d-flex flex-column flex-grow-1 py-2">
                <a asp-area="UserPanel" asp-controller="Home" asp-action="ShowMessages" class="text-dark-75 font-weight-bold text-hover-primary font-size-lg mb-1">
                    پیامک ها
                </a>

            </div>
            <!--end::متن-->

        </div>
        <div class="d-flex align-items-center mb-1">

            <!--begin::متن-->
            <div class="d-flex flex-column flex-grow-1 py-2">
                <a href="#" class="text-dark-75 font-weight-bold text-hover-primary font-size-lg mb-1">
                    پرداختی ها
                </a>

            </div>
            <!--end::متن-->

        </div>
        <div class="d-flex align-items-center mb-1">

            <!--begin::متن-->
            <div class="d-flex flex-column flex-grow-1 py-2">
                <a href="#" class="text-dark-75 font-weight-bold text-hover-primary font-size-lg mb-1">
                    تیکت ها
                </a>

            </div>
            <!--end::متن-->

        </div>
        @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admins"))
        {
            <div class="d-flex align-items-center mb-1">

                <!--begin::متن-->
                <div class="d-flex flex-column flex-grow-1 py-2">
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="text-dark-75 font-weight-bold text-hover-primary font-size-lg mb-1">
                        داشبورد مدیریتی
                    </a>

                </div>
                <!--end::متن-->

            </div>
        }

        <div class="d-flex align-items-center mb-1">

            <!--begin::متن-->
            <div class="d-flex flex-column flex-grow-1 py-2">
                <a asp-area="" asp-controller="Account" asp-action="SignOut" class="text-dark font-weight-bold text-hover-primary font-size-lg mb-1">
                    خروج
                </a>

            </div>
            <!--end::متن-->

        </div>

    </div>
    <!--end::Body-->
</div>