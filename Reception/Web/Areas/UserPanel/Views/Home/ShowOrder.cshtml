@using Common.Library
@model Tuple<List<Reception>,int>
@{
    ViewData["Title"] = "ShowOrder";
    int row = 1;
    string query = " ";
}

<div class="container">
<div class="card card-custom ">
<div class="card-header ribbon ribbon-clip ribbon-right">
    <div class="ribbon-target" style="top: 12px;">
        <span class="ribbon-inner bg-success"></span>ویرایش اطلاعات
    </div>
    <div class="card-title">
        <h3 class="card-label">
            نمایش اطلاعات
        </h3>
    </div>
</div>
<div class="card-body pt-2">
    <div class="mb-7">
        <form asp-area="UserPanel" asp-controller="Home" asp-action="ShowOrder" method="get">
            <div class="row align-items-center">

                <div class="col-lg-10 col-xl-10">
                    <div class="row align-items-center">
                        <div class="col-md-10 my-2 my-md-0">
                            <div class="input-icon">
                                <input type="text" name="search" class="form-control" placeholder="جستجو..." id="kt_datatable_search_query">
                                <span>
                                    <i class="flaticon2-search-1 text-muted"></i>
                                </span>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-lg-2 col-xl-2 mt-5 mt-lg-0">
                    <button type="submit" class="btn btn-light-primary px-6 font-weight-bold">
                        جستجو
                    </button>
                </div>

            </div>
        </form>
    </div>
    <hr />
    <p>
        <a asp-area="UserPanel" asp-controller="Home" asp-action="ShowOrder" class="btn btn-info">بروزرسانی</a>
    </p>
    <table class="table table-striped table-responsive table-bordered">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    پذیرش
                </th>
                <th>
                    مشتری
                </th>

                <th>
                    تاریخ
                </th>
                <th>
                    تماس
                </th>

                <th>
                    دستگاه
                </th>
                <th>
                    سریال
                </th>
                <th>
                    وضعیت
                </th>
                <th>
                    عملیات
                </th>


            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Item1)
            {
                <tr>
                    <td>
                        @row
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReceptionId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer.FullName)
                    </td>
                    <td>
                        <p class="text-primary font-weight-bold">
                            @item.InsertDate.ToShamsi()
                        </p>
                    </td>
                    <td>
                        <p class="text-info font-weight-bold">
                            @item.Customer.Contact
                        </p>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Serial)
                    </td>
                    <td>
                        @if (item.ReceptionStatus == ReceptionStatus.Done)
                        {
                            <a class="btn btn-success btn-sm btn-icon" title="تکمیل شده"><i class="fas fa-check-square"></i></a>
                        }
                        else
                        {
                            <a class="btn btn-danger btn-sm btn-icon" title="تکمیل نشده"><i class="fas fa-check-square"></i></a>
                        }
                    </td>
                    <td>
                        <a asp-area="UserPanel" asp-controller="Home" as asp-action="OrderDetail" class="btn btn-icon btn-info btn-sm" title="شرح" asp-route-id="@item.ReceptionId"><i class="fas fa-info-circle"></i></a>
                       
                    </td>
                </tr>
                row++;
            }
        </tbody>
    </table>

</div>
<div class="container">
    @if (Model.Item2 > 1)
    {
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= Model.Item2; i++)
                {
                    <li class="page-item">
                        @if (!string.IsNullOrEmpty(query))
                        {
                            <a class="page-link" href="/UserPanel/Home/ShowOrder?pageId=@i&search=@query">
                                @i
                            </a>
                        }
                        else
                        {
                            <a class="page-link" href="/UserPanel/Home/ShowOrder?pageId=@i">
                                @i
                            </a>
                        }
                    </li>
                }
            </ul>
        </nav>
    }


</div>
</div>
    <!--end::Body-->
</div>