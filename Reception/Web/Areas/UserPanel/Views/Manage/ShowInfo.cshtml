@model Data.ViewModels.Customer.ShowInfoViewModel
@using Common.Library
@{
    ViewData["Title"] = "ShowInfo";
}

<div class="card card-custom bg-white rounded p-10 card-border border-light-primary gutter-b card-stretch card-shadowless">

    <!--begin::Body-->
    <div class="card-body pt-2">
        <div class="form-group row">
            <label asp-for="FullName" class="col-xl-3 col-lg-3 col-form-label text-right"></label>
            <div class="col-lg-9 col-xl-6">
                <input asp-for="FullName" class="form-control form-control-lg form-control-solid" disabled="disabled"  type="text" >
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Contact" class="col-xl-3 col-lg-3 col-form-label text-right"></label>
            <div class="col-lg-9 col-xl-6">
                <input asp-for="Contact" class="form-control form-control-lg form-control-solid" disabled="disabled" type="text" >
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Address" class="col-xl-3 col-lg-3 col-form-label text-right"></label>
            <div class="col-lg-9 col-xl-6">
                <input asp-for="Address" class="form-control form-control-lg form-control-solid" disabled="disabled" type="text" >
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="InsertDate" class="col-xl-3 col-lg-3 col-form-label text-right"></label>
            <div class="col-lg-9 col-xl-6">
                <input asp-for="InsertDate" class="form-control form-control-lg form-control-solid" disabled="disabled" value="@Model.InsertDate.ToShamsi()" type="text" >
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="UpDateTime" class="col-xl-3 col-lg-3 col-form-label text-right"></label>
            <div class="col-lg-9 col-xl-6">
                <input asp-for="UpDateTime" class="form-control form-control-lg form-control-solid" disabled="disabled" value="@Model.UpDateTime?.ToShamsi()" type="text" >
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Description" class="col-xl-3 col-lg-3 col-form-label text-right"></label>
            <div class="col-lg-9 col-xl-6">
                <input asp-for="Description" class="form-control form-control-lg form-control-solid" disabled="disabled" type="text" >
            </div>
        </div>

    </div>
    <!--end::Body-->
</div>

