@model Data.ViewModels.Customer.ChangeUserPasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
}

<div class="card card-custom ">
    <div class="card-header ribbon ribbon-clip ribbon-right">
        <div class="ribbon-target" style="top: 12px;">
            <span class="ribbon-inner bg-success"></span>تغییر پسورد
        </div>
        <div class="card-title">
            <h3 class="card-label">
                نمایش اطلاعات
                @* <small>زیر عنوان</small>*@
            </h3>
        </div>
    </div>
    <!--begin::Body-->
    <div class="card-body pt-2">
        <form asp-area="UserPanel" asp-controller="Manage" asp-action="ChangePassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group row">
                <label asp-for="OldPassword" class="col-xl-3 col-lg-3 col-form-label text-right"></label>
                <div class="col-lg-9 col-xl-6">
                    <input asp-for="OldPassword" class="form-control form-control-lg form-control-solid" type="text">
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="col-xl-3 col-lg-3 col-form-label text-right"></label>
                <div class="col-lg-9 col-xl-6">
                    <input asp-for="Password" class="form-control form-control-lg form-control-solid" type="text">
                    <span asp-validation-for="Password" class="text-danger"></span>

                </div>
            </div>
            <div class="form-group row">
                <label asp-for="RePassword" class="col-xl-3 col-lg-3 col-form-label text-right"></label>
                <div class="col-lg-9 col-xl-6">
                    <input asp-for="RePassword" class="form-control form-control-lg form-control-solid" type="text">
                    <span asp-validation-for="RePassword" class="text-danger"></span>

                </div>
            </div>

            <div class="d-flex justify-content-between border-top mt-5 pt-10">
                <div>
                    <button type="submit" class="btn btn-primary font-weight-bold text-uppercase px-5 py-2">
                        ویرایش رمز عبور
                    </button>
                    <a asp-area="UserPanel" asp-controller="Manage" asp-action="ShowInfo" class="btn btn-info font-weight-bold text-uppercase px-5 py-2">
                        بازگشت به لیست
                    </a>
                </div>
            </div>
        </form>


    </div>
    <!--end::Body-->
</div>
