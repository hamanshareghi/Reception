@using Common.Library
@model Tuple<List<Model.Entities.Sale>, int>
@{
    int row = 1;
}

<div class="container">
    <h1> فروش</h1>
    <div class="mb-7">
        <form asp-area="Admin" asp-controller="Sales" asp-action="Index" method="get">
            <div class="row align-items-center">

                <div class="col-lg-10 col-xl-10">
                    <div class="row align-items-center">
                        <div class="col-md-10 my-2 my-md-0">
                            <div class="input-icon">
                                <input type="text" name="search" class="form-control" placeholder="جستجو..." id="kt_datatable_search_query">
                                <span>
                                    <i class="flaticon2-search-1 text-muted"></i>
                                </span>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-lg-2 col-xl-2 mt-5 mt-lg-0">
                    <button type="submit" class="btn btn-light-primary px-6 font-weight-bold">
                        جستجو
                    </button>
                </div>

            </div>
        </form>
    </div>
    <hr />
    <p>
        <a asp-area="Admin" asp-controller="Sales" asp-action="Create" class="btn btn-success">فروش جدید</a>
        <a asp-area="Admin" asp-controller="Sales" asp-action="Index" class="btn btn-info">بروزرسانی</a>
    </p>
    <table class="table table-striped table-responsive table-bordered">
        <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                تاریخ
            </th>
            <th>
                مشتری
            </th>
            <th>
                محصول
            </th>
            <th>
                تعداد
            </th>
            <th>
                لینک
            </th>
            <th>
                کاربر
            </th>

            <th>
                شرح
            </th>

            <th>دستورات</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Item1)
        {
            <tr>
                <td>
                    @row
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.FullName)
                </td>
                <td>
                    <p class="text-info font-weight-bold">
                        @item.SaleDate.ToShamsi()
                    </p>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShortKey)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.FullName)
                </td>
                <td>
                    @Html.Raw(item.Description)
                </td>



                <td>
                    <a asp-action="Edit" class="btn btn-icon btn-warning btn-sm" title="ویرایش" asp-route-id="@item.SaleId"><i class="far fa-edit"></i></a>
                    <a asp-action="Details" class="btn btn-icon btn-info btn-sm" title="شرح" asp-route-id="@item.SaleId"><i class="fas fa-info-circle"></i></a>
                    <a asp-action="Delete" class="btn btn-icon btn-danger btn-sm" title="حذف" asp-route-id="@item.SaleId"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
            row++;
        }
        </tbody>
    </table>

</div>
