@using Common.Library
@model Model.Entities.Sale

<h3>آیا از حذف اطلاعات اطمینان دارید؟</h3>
<div>
    <h4>Sale</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CurrentId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CurrentId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SaleDate)
        </dt>
        <dd class = "col-sm-10">
            <p class="text-info font-weight-bold">
                @Model.SaleDate.ToShamsi()
            </p>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Count)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Count)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShortKey)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShortKey)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd >
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.FullName)
        </dd >

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UpDateTime)
        </dt>
        <dd class = "col-sm-10">
            <p class="text-success font-weight-bold">
                @Model.UpDateTime?.ToShamsi()
            </p>
        </dd>
    </dl>
    
    <form asp-area="Admin" asp-controller="Sales" asp-action="Delete">
        <input type="hidden" asp-for="SaleId" />
        <input type="submit" value="حذف پذیرش" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-info">بازگشت به لیست</a>
    </form>
</div>
