@model IEnumerable<Model.Entities.Product>

@{
    ViewData["Title"] = "Index";
}


<h4 class="card-title">لیست محصولات</h4>
<hr />
<p>
    <a asp-action="Create" class="btn btn-success">محصول جدید</a>
</p>
<table class="table table-striped table-bordered table-responsive">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.InsertDate)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductGroup.GroupName)
            </th>
         <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.InsertDate)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductGroup.GroupName)
            </td>
          
            <td>
                <img src="~/img/Products/@item.Image" class="img-thumbnail w-25" alt="@item.ProductGroup.GroupName" />
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.ProductId"><i class="far fa-edit"></i></a>
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.ProductId"><i class="fas fa-info-circle"></i></a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ProductId"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
