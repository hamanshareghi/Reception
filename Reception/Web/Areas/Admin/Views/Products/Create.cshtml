@model Model.Entities.Product

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h4 class="card-title">محصول جدید</h4>
    <hr />
    <div class="row">
        <div class="col-md-10 m-auto">
            <form asp-area="Admin" asp-action="Create" method="post" asp-controller="Products" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               
                    @*<div class="form-group col-md-12 col-lg-6 col-sm-12">
                        <label asp-for="ProductGroupId" class="control-label"></label>
                        <select asp-for="ProductGroupId" class="form-control" asp-items="ViewBag.ProductGroupId"></select>
                    </div>*@
                    <div class="dropdown bootstrap-select form-control mb-5 ">
                        <label asp-for="ProductGroupId" class="control-label "></label>

                        <select class="form-control selectpicker" asp-for="ProductGroupId" data-live-search="true" tabindex="null" asp-items="ViewBag.ProductGroupId">
                        </select>
                    </div>
                    <div class="form-group ">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
              


                <div class="row">
                    <div class="form-group col-md-12 col-lg-12 col-sm-12">
                        <label asp-for="ShortText" class="control-label"></label>
                        <input asp-for="ShortText" class="form-control" />
                        <span asp-validation-for="ShortText" class="text-danger"></span>
                    </div>
                </div>


                <div class="row">
                    <div class="form-group col-md-12 col-lg-6 col-sm-12">
                        <label asp-for="BrandId" class="control-label"></label>
                        <select asp-for="BrandId" class="form-control" asp-items="ViewBag.BrandId"></select>
                    </div>
                    <div class="form-group col-md-12 col-lg-6 col-sm-12">
                        <label asp-for="Image" class="control-label"></label>
                        <input name="imgUp" type="file" asp-for="Image" class="form-control" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                        <span class="text-danger font-weight-bold">سایز تصویر : 640 * 550</span>
                    </div>
                </div>


                <div class="form-group">
                    <input type="submit" value="ثبت محصول" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-info">بازگشت به لیست</a>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {


    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

  
}
