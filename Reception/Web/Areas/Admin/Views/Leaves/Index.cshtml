@model IEnumerable<Model.Entities.Leave>

@{
    ViewData["Title"] = "Index";
}

<h1>لیست مرخصی</h1>
<hr />
<p>
    <a asp-action="Create" class="btn btn-success">ثبت مرخصی جدید</a>
</p>
<table class="table table-striped table-responsive table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Description)
            </th>*@

            <th>دستورات</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            @*<td>
                @Html.Raw(item.Description)
            </td>*@

            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id"><i class="far fa-edit"></i></a>
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i></a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
