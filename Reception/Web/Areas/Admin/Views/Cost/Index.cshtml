@using Common.Library
@model Tuple<List<Model.Entities.Cost>, int>

@{
    int row = 1;
    string query = " ";
    if (ViewBag.Search != null)
    {
        query = ViewBag.Search.ToString();
    }
}

<div class="container">
    <h1> هزینه</h1>
    <div class="mb-7">
        <form asp-area="Admin" asp-controller="Cost" asp-action="Index" method="get">
            <div class="row align-items-center">

                <div class="col-lg-10 col-xl-10">
                    <div class="row align-items-center">
                        <div class="col-md-10 my-2 my-md-0">
                            <div class="input-icon">
                                <input type="text" name="search" class="form-control" placeholder="جستجو..." id="kt_datatable_search_query">
                                <span>
                                    <i class="flaticon2-search-1 text-muted"></i>
                                </span>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-lg-2 col-xl-2 mt-5 mt-lg-0">
                    <button type="submit" class="btn btn-light-primary px-6 font-weight-bold">
                        جستجو
                    </button>
                </div>

            </div>
        </form>
    </div>
    <hr />
    <p>
        <a asp-action="Create" class="btn btn-success">هزینه جدید</a>
    </p>
    <table class="table table-bordered table-striped table-responsive">
        <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                گروه هزینه
            </th>
            <th>
                مبلغ
            </th>
            <th>
                تاریخ
            </th>
            <th>
                کاربر
            </th>

            <th>دستورات</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Item1)
            {
                <tr>
                    <td>
                        @row
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CostDefine.Name)
                    </td>
                    <td>
                        <p class="font-weight-bold text-dark">
                            @item.Price.ToString("#,0") تومان
                        </p>
                    </td>
                    <td>
                        <p class="text-info font-weight-bold">
                            @item.InsertDate.ToShamsi()
                        </p>

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>

                    <td>
                        <td>
                            <a asp-action="Edit" class="btn btn-icon btn-warning btn-sm" title="ویرایش" asp-route-id="@item.CostId"><i class="far fa-edit"></i></a>
                            <a asp-action="Details" class="btn btn-icon btn-info btn-sm" title="شرح" asp-route-id="@item.CostId"><i class="fas fa-info-circle"></i></a>
                            <a asp-action="Delete" class="btn btn-icon btn-danger btn-sm" title="حذف" asp-route-id="@item.CostId"><i class="fas fa-trash"></i></a>
                            <a asp-action="Send" class="btn btn-icon btn-success btn-sm" title="پیامک" asp-route-id="@item.CostId"><i class="fas fa-comment-alt"></i></a>

                        </td>

                    </td>
                </tr>
                row++;
            }
        <tr>
            <td colspan="2" class="text-black-50 font-weight-bold">مجموع</td>
            <td colspan="1" class="text-center font-weight-bold text-primary">@Model.Item1.Sum(c => c.Price).ToString("#,0") تومان</td>
        </tr>
        </tbody>
    </table>
</div>


<div class="container">
    @if (Model.Item2 > 1)
    {
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= Model.Item2; i++)
                {
                    <li class="page-item">
                        @if (!string.IsNullOrEmpty(query))
                        {
                            <a class="page-link" href="/Cost/Index?pageId=@i&search=@query">
                                @i
                            </a>
                        }
                        else
                        {
                            <a class="page-link" href="/Cost/Index?pageId=@i">
                                @i
                            </a>
                        }
                    </li>
                }
            </ul>
        </nav>
    }
</div>
