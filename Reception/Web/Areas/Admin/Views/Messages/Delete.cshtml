@model Model.Entities.Message

@{
    ViewData["Title"] = "Delete";
}
<div class="container">
    <h1 class="card-title">حذف پیام</h1>
    <h3>آیا از حذف پیام اطمینان دارید؟</h3>
    <div>


        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Text)
            </dt>
            <dd>
                @Html.Raw(Model.Text)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Image)
            </dt>
            <dd>
                <img class="img-thumbnail" src="/img/Messages/@Model.Image" alt="@Model.Title" />
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="حذف پیام" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-info">بازگشت به لیست</a>
        </form>
    </div>
</div>

