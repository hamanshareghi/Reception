@model Model.Entities.OneData

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1 class="card-title">اطلاعات جدید</h1>


    <hr />
    <div class="row">
        <div class="col-md-12 mx-auto">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="SiteAddress" class="control-label"></label>
                    <input asp-for="SiteAddress" class="form-control">
                    <span asp-validation-for="SiteAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Introduction" class="control-label"></label>
                    <textarea asp-for="Introduction" class="form-control" id="TextComment"></textarea>
                    <span asp-validation-for="Introduction" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SiteRules" class="control-label"></label>
                    <textarea asp-for="SiteRules" class="form-control" id="Text"></textarea>
                    <span asp-validation-for="SiteRules" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Privacy" class="control-label"></label>
                    <textarea asp-for="Privacy" class="form-control" id="TextPrivacy"></textarea>
                    <span asp-validation-for="Privacy" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="ثبت اطلاعات" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-info">بازگشت به لیست</a>
                </div>
            </form>
        </div>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/ckeditor5/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#TextComment'), {
                // The language code is defined in the https://en.wikipedia.org/wiki/ISO_639-1 standard.
                language: 'fa'
            })
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });
    </script>
    <script>
        ClassicEditor
            .create( document.querySelector( '#Text' ), {
                // The language code is defined in the https://en.wikipedia.org/wiki/ISO_639-1 standard.
                language: 'fa'
            } )
            .then( editor => {
                console.log( editor );
            } )
            .catch( error => {
                console.error( error );
            } );
    </script>
    <script>
        ClassicEditor
            .create(document.querySelector( '#TextPrivacy' ), {
                // The language code is defined in the https://en.wikipedia.org/wiki/ISO_639-1 standard.
                language: 'fa'
            } )
            .then( editor => {
                console.log( editor );
            } )
            .catch( error => {
                console.error( error );
            } );
    </script>
}



