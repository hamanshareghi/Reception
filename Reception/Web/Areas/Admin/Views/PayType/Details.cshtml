@using Common.Library
@model Model.Entities.PayType

<div class="container">
    <div>
        <h4>شرح اطلاعات</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Account)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Account)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(Model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.InsertDate)
            </dt>
            <dd class="col-sm-10">
                <p class="text-info font-weight-bold">
                    @Model.InsertDate.ToShamsi()
                </p>
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UpDateTime)
            </dt>
            <dd class="col-sm-10">
                <p class="text-info font-weight-bold">
                    @Model.UpDateTime?.ToShamsi()
                </p>
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model.PayTypeId">ویرایش اطلاعات</a>
        <a asp-action="Index" class="btn btn-info">بازگشت به لیست</a>
    </div>

</div>
