@model IEnumerable<Model.Entities.RequestDevice>
@using Common.Library
@{
    ViewData["Title"] = "Index";
}

<h1>لیست درخواست ها</h1>
<hr />
<p>
    <a asp-action="Create" class="btn btn-success">درخواست جدید</a>
</p>
<table class="table table-striped table-responsive table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.User.PhoneNumber)*@
                شماره تماس
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ViewStatus)
            </th>
            <th>دستورات</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.PhoneNumber)
            </td>
            <td>
                <p class="font-weight-bold text-success">
                    @item.UpDateTime?.ToShamsi()
                </p>
                @*@Html.DisplayFor(modelItem => item.UpDateTime)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td>
                @Html.Raw(item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ViewStatus)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.RequestDeviceId"><i class="far fa-edit"></i></a>
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.RequestDeviceId"><i class="fas fa-info-circle"></i></a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.RequestDeviceId"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
