@model Model.Entities.RequestDevice

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h4>تغییرات درخواست</h4>
    <hr />
    <div class="row">
        <div class="col-md-12 mx-auto">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="RequestDeviceId" />
                <input type="hidden" asp-for="InsertDate" />
                <input type="hidden" asp-for="UserId" />

                <div class="dropdown bootstrap-select form-control mb-5">
                    <label asp-for="CustomerId" class="control-label"></label>
                    <select class="form-control selectpicker" asp-for="CustomerId" data-live-search="true" tabindex="null" asp-items="ViewBag.CustomerId">
                    </select>
                </div>

                <div class="dropdown bootstrap-select form-control mb-5 ">
                    <label asp-for="ProductId" class="control-label "></label>

                    <select class="form-control selectpicker" asp-for="ProductId" data-live-search="true" tabindex="null" asp-items="ViewBag.ProductId">
                    </select>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="ViewStatus" /> @Html.DisplayNameFor(model => model.ViewStatus)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" id="editor"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="ثبت تغییرات" class="btn btn-warning" />
                    <a asp-action="Index" class="btn btn-info">بازگشت به لیست</a>

                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/ckeditor5/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'), {
                // The language code is defined in the https://en.wikipedia.org/wiki/ISO_639-1 standard.
                language: 'fa'
            })
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });
    </script>
}
