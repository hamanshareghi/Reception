@model Data.ViewModels.Customer.EditCustomerViewModel
@{
    ViewData["Title"] = "EditCustomer";
}

<div class="d-flex flex-column-fluid">
    <!--begin::Container-->
    <div class=" container ">
        <!--begin::Card-->
        <div class="card card-custom">
            <div class="card-body p-0">
                <div class="wizard wizard-1" id="kt_projects_add" data-wizard-state="first" data-wizard-clickable="true">

                    <div class="row justify-content-center my-10 px-8 my-lg-15 px-lg-10">
                        <div class="col-xl-12 col-xxl-7">
                            <!--begin::Form ویزارد-->
                            <form asp-area="Admin" asp-controller="Customer" asp-action="EditCustomer" method="post" class="form fv-plugins-bootstrap fv-plugins-framework" id="kt_projects_add_form">
                                <!--begin::گام 1-->
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                                <input type="hidden" asp-for="Id" />    
                                <div class="pb-5" data-wizard-type="step-content" data-wizard-state="current">
                                    <h3 class="mb-5 font-weight-bold text-dark">ویرایش اطلاعات مشتریان:</h3>
                                    <div class="row">
                                        <div class="col-xl-12">

                                            <div class="form-group row fv-plugins-icon-container">
                                                <label class="col-xl-3 col-lg-3 col-form-label" asp-for="FullName"></label>
                                                <div class="col-lg-9 col-xl-9">
                                                    <div class="input-group input-group-lg input-group-solid">
                                                        <div class="input-group-prepend"><span class="input-group-text"><i class="la la-file-contract"></i></span></div>
                                                        <input type="text" class="form-control form-control-lg form-control-solid" asp-for="FullName" placeholder="نام کامل">
                                                    </div>
                                                    <div class="fv-plugins-message-container"></div>
                                                </div>
                                            </div>
                                            <div class="form-group row fv-plugins-icon-container">
                                                <label class="col-xl-3 col-lg-3 col-form-label">موبایل</label>
                                                <div class="col-lg-9 col-xl-9">
                                                    <div class="input-group input-group-lg input-group-solid">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text">
                                                                <i class="la la-phone"></i>
                                                            </span>
                                                        </div>
                                                        <input type="tel" class="form-control form-control-lg form-control-solid" asp-for="Contact" placeholder="موبایل">
                                                    </div>
                                                    @*<span class="form-text text-muted">ما هرگز ایمیل شما را با هیچ کس دیگری به اشتراک نمی گذاریم.</span>*@
                                                    <div class="fv-plugins-message-container"></div>
                                                </div>
                                            </div>
                                            <div class="form-group row fv-plugins-icon-container">
                                                <label class="col-xl-3 col-lg-3 col-form-label">ایمیل</label>
                                                <div class="col-lg-9 col-xl-9">
                                                    <div class="input-group input-group-lg input-group-solid">
                                                        <div class="input-group-prepend"><span class="input-group-text"><i class="la la-at"></i></span></div>
                                                        <input type="email" class="form-control form-control-lg form-control-solid" asp-for="Email" placeholder="پست الکترونیک">
                                                    </div>
                                                    <div class="fv-plugins-message-container"></div>
                                                </div>
                                            </div>
                                            <div class="form-group row fv-plugins-icon-container">
                                                <label class="col-xl-3 col-lg-3 col-form-label" asp-for="Address"></label>
                                                <div class="col-lg-9 col-xl-9">
                                                    <div class="input-group input-group-lg input-group-solid">
                                                        <div class="input-group-prepend"><span class="input-group-text"><i class="la la-map"></i></span></div>
                                                        <input type="text" class="form-control form-control-lg form-control-solid" asp-for="Address" placeholder="آدرس">
                                                    </div>
                                                    <div class="fv-plugins-message-container"></div>
                                                </div>
                                            </div>
                                            <div class="form-group row fv-plugins-icon-container">
                                                <label class="col-xl-3 col-lg-3 col-form-label" asp-for="Description"></label>
                                                <div class="col-lg-9 col-xl-9">
                                                    <div class="input-group input-group-lg input-group-solid">
                                                        <div class="input-group-prepend"><span class="input-group-text"><i class="la la-file-text"></i></span></div>
                                                        <input type="text" class="form-control form-control-lg form-control-solid" asp-for="Description" placeholder="توضیحات تکمیلی">
                                                    </div>
                                                    <div class="fv-plugins-message-container"></div>
                                                </div>
                                            </div>


                                        </div>
                                    </div>
                                </div>
                                <!--end::گام 1-->
                                <!--begin::اقدامات-->
                                <div class="d-flex justify-content-between border-top mt-5 pt-10">

                                    <div>

                                        <button type="submit" class="btn btn-warning font-weight-bold text-uppercase px-5 py-2">
                                            ویرایش اطلاعات مشتریان
                                        </button>
                                        <a asp-area="Admin" asp-controller="Customer" asp-action="Index" class="btn btn-info font-weight-bold text-uppercase px-5 py-2">
                                            بازگشت به لیست
                                        </a>
                                    </div>
                                </div>
                                <!--end::اقدامات-->
                                <div></div><div></div><div></div>
                            </form>
                            <!--end::Form ویزارد-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--end::Card-->
    </div>
    <!--end::Container-->
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/lib/ckeditor5/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'),
                {
                    // The language code is defined in the https://en.wikipedia.org/wiki/ISO_639-1 standard.
                    language: 'fa'
                })
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });
    </script>

}

