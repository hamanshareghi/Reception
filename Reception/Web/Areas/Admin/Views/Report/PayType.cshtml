@using Common.Library

@model List<Sale>
@{
    ViewData["Title"] = "Sale";
    int row = 1;
}

<link href="~/lib/Kendo/css/kendo.common.min.css" rel="stylesheet" />
<link href="~/lib/Kendo/css/kendo.default.min.css" rel="stylesheet" />
<div class="container">
    <h1>گزارش دوره ای فروش به تفکیک نحوه پرداخت</h1>
    <hr />
    <div class="mb-7">
        <form asp-area="Admin" asp-controller="Report" asp-action="PayType" method="get">
            <div class="row align-items-center">

                <div class="col-lg-4 col-xl-4">
                    <div class="col-md-10 my-2 my-md-0">
                        <select class="form-control selectpicker" name="payTypeId" id="payTypeId" data-live-search="true" tabindex="null" asp-items="ViewBag.PayTypeId">
                        </select>


                    </div>
                </div>
                <div class="col-lg-3 col-xl-3">
                    <div class="col-md-11 my-2 my-md-0">
                        <input type="text" id="strDate" name="strDate" class="form-control w-100">
                    </div>
                </div>
                <div class="col-lg-3 col-xl-3">
                    <div class="col-md-12 my-2 my-md-0">
                        <input type="text" id="endDate" name="endDate" class="form-control w-100">
                    </div>
                </div>
                <div class="col-lg-2 col-xl-2 mt-5 mt-lg-0">
                    <button type="submit" class="btn btn-light-primary px-6 font-weight-bold">
                        جستجو
                    </button>
                </div>

            </div>
        </form>
    </div>
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    تاریخ
                </th>
                <th>
                    مشتری
                </th>
                <th>
                    محصول
                </th>
                <th>
                    تعداد
                </th>
                <th>
                    قیمت
                </th>
                <th>
                    پرداخت
                </th>
                <th>
                    لینک
                </th>

                <th>
                    شرح
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @row
                    </td>
                    <td>
                        <p class="text-info font-weight-bold">
                            @item.SaleDate.ToShamsi()
                        </p>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Name)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Count)
                    </td>

                    <td>
                        <p class="text-danger font-weight-bold">
                            @item.SalePrice.ToString("#,0") تومان
                        </p>
                    </td>
                    <td>
                        <img src="~/img/PayType/@item.PayTypes.Image" class="img-thumbnail w-25" alt="www.storebit.ir" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShortKey)
                    </td>

                    <td>
                        @Html.Raw(item.Description)
                    </td>


                </tr>
                row++;
            }
            <tr>
                <td colspan="5" class="text-black-50 font-weight-bold">مجموع</td>
                <td colspan="1" class="text-center font-weight-bold text-primary">@Model.Sum(c => c.SalePrice).ToString("#,0") تومان</td>
            </tr>
        </tbody>
    </table>
</div>







@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/Kendo/js/jquery-1.12.4.min.js"></script>

    <script src="~/lib/Kendo/js/JalaliDate.js"></script>
    <script src="~/lib/Kendo/js/kendo.web.js"></script>
    <script src="~/lib/Kendo/js/fa-IR.js"></script>
    <script src="~/lib/Kendo/js/kendo.calendar.fa.js"></script>
    <script src="~/lib/Kendo/js/kendo.datepicker.fa.js"></script>
    <script>
        $(document).ready(function () {

            // create DatePicker from input HTML element
            //$("#datepicker").kendoDatePicker({ culture: "en-US" });
            $("#strDate").kendoDatePickerShamsi({ culture: "fa-IR" });
            $("#endDate").kendoDatePickerShamsi({ culture: "fa-IR" });

            //$("#calendar").kendoCalendar({ culture: "en-US" });
            //$("#calendarShamsi").kendoCalendarShamsi({ culture: "fa-IR" });

            //$("#timepicker").kendoTimePicker();
        });
    </script>
}

