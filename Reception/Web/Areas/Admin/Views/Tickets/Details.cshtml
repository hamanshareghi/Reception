@model Model.Entities.Ticket
@using Common.Library
@{
    ViewData["Title"] = "Details";
}

<h1>شرح تیکت</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MessageStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MessageStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.FullName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UpDateTime)
        </dt>
        <dd class="col-sm-10">
            <p class="text-dark font-weight-bold">
                @Model.UpDateTime?.ToShamsiDot()
            </p>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model.TicketId">ویرایش تیکت</a>
    <a asp-action="Index" class="btn btn-info">بازگشت به لیست</a>
</div>
