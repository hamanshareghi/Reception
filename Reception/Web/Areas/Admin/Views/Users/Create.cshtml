@model Data.ViewModels.Account.CreateModel
<div class="container">
    <div class="alert alert-info m-1 p-1 text-white"><h4>کاربرجدید</h4></div>
    <div asp-validation-summary="All" class="text-danger"></div>
    
    <hr />

    <button type="submit" class="btn btn-success">ثبت کاربرجدید</button>
        <a asp-action="Index" class="btn btn-secondary">انصراف</a>
    

    
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="UserKind" class="control-label"></label>
            <select asp-for="UserKind"
                    class="form-control"
                    asp-items="Html.GetEnumSelectList<UserKind>()">
                <option>Select type ...</option>
            </select>
            <span asp-validation-for="UserKind" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
        </div>


        <div class="form-group">
            <label asp-for="Roles"></label>
            <select asp-for="Roles" class="form-control" asp-items="ViewBag.Roles"></select>
        </div>

    </form>
</div>

