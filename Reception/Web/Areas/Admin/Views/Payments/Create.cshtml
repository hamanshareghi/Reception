@model Model.Entities.Payment

@{
    ViewData["Title"] = "Create";
}
<link href="~/lib/Kendo/css/kendo.common.min.css" rel="stylesheet" />
<link href="~/lib/Kendo/css/kendo.default.min.css" rel="stylesheet" />

<div class="container">
    <h1>پرداختی جدید</h1>

    <hr />
    <div class="row">
        <div class="col-md-12 mx-auto">
            <form asp-area="Admin" asp-controller="Payments" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="dropdown bootstrap-select form-control mb-5">
                    <label asp-for="CustomerId" class="control-label"></label>
                    <select class="form-control selectpicker" asp-for="CustomerId" data-live-search="true" tabindex="null" asp-items="ViewBag.CustomerId">
                    </select>
                </div>
                <div class="row">
                    <div class="form-group col-lg-4 col-md-4 col-sm-12 w-100">
                        <label asp-for="PaymentDate" class="control-label"></label>
                        <input type="text" id="date" name="date" class="form-control w-100">
                    </div>
                    <div class="form-group col-lg-8 col-md-8 col-sm-12">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6 col-md-6 col-sm-12">
                        <label asp-for="Source" class="control-label"></label>
                        <input asp-for="Source" class="form-control" />
                        <span asp-validation-for="Source" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-12">
                        <label asp-for="Destination" class="control-label"></label>
                        <input asp-for="Destination" class="form-control" />
                        <span asp-validation-for="Destination" class="text-danger"></span>
                    </div>
                </div>
               
                <div class="form-group">
                    <label asp-for="Recipt" class="control-label"></label>
                    <input asp-for="Recipt" class="form-control" />
                    <span asp-validation-for="Recipt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" id="editor"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="ثبت پرداختی " class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-info">بازگشت به لیست</a>

                </div>
            </form>
        </div>
    </div>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        <script src="~/lib/ckeditor5/ckeditor.js"></script>
        <script>
            ClassicEditor
                .create(document.querySelector('#editor'), {
                    // The language code is defined in the https://en.wikipedia.org/wiki/ISO_639-1 standard.
                    language: 'fa'
                })
                .then(editor => {
                    console.log(editor);
                })
                .catch(error => {
                    console.error(error);
                });
        </script>
        
        <script src="~/lib/Kendo/js/jquery-1.12.4.min.js"></script>

        <script src="~/lib/Kendo/js/JalaliDate.js"></script>
        <script src="~/lib/Kendo/js/kendo.web.js"></script>
        <script src="~/lib/Kendo/js/fa-IR.js"></script>
        <script src="~/lib/Kendo/js/kendo.calendar.fa.js"></script>
        <script src="~/lib/Kendo/js/kendo.datepicker.fa.js"></script>
        <script>
            $(document).ready(function () {
                $("#date").kendoDatePickerShamsi({ culture: "fa-IR" });
            });
        </script>
    }

</div>
