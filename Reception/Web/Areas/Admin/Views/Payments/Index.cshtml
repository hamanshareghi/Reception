@using Common.Library
@model Tuple<List<Model.Entities.Payment>, int>

@{
    ViewData["Title"] = "Index";
    int row = 1;
    string query = " ";
    if (ViewBag.Search != null)
    {
        query = ViewBag.Search.ToString();
    }
}


<div class="container">
    <h1>پرداخت ها</h1>
    <div class="mb-7">
        <form asp-area="Admin" asp-controller="Payments" asp-action="Index" method="get">
            <div class="row align-items-center">

                <div class="col-lg-10 col-xl-10">
                    <div class="row align-items-center">
                        <div class="col-md-10 my-2 my-md-0">
                            <div class="input-icon">
                                <input type="text" name="search" class="form-control" placeholder="جستجو..." id="kt_datatable_search_query">
                                <span>
                                    <i class="flaticon2-search-1 text-muted"></i>
                                </span>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-lg-2 col-xl-2 mt-5 mt-lg-0">
                    <button type="submit" class="btn btn-light-primary px-6 font-weight-bold">
                        جستجو
                    </button>
                </div>

            </div>
        </form>
    </div>
    <hr />
    <p>
        <a asp-area="Admin" asp-controller="Payments" asp-action="Create" class="btn btn-success">ثبت پرداختی جدید</a>
        <a asp-area="Admin" asp-controller="Payments" asp-action="Index" class="btn btn-info">بروزرسانی</a>
    </p>
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    تاریخ
                </th>
                <th>
                    مبلغ
                </th>
                <th>
                    از حساب
                </th>
                <th>
                    به حساب
                </th>
                <th>
                    فیش
                </th>
                <th>
                    شرح
                </th>
                <th>
                    کاربر
                </th>

                <th>
                    بروزرسانی
                </th>
                <th>دستورات</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Item1)
            {
                <tr>
                    <td>
                        @row
                    </td>
                    <td>
                        <p class="text-primary font-weight-bold">
                            @item.PaymentDate.ToShamsi()
                        </p>
                    </td>
                    <td>
                        <p class="text-info font-weight-bold">
                            @item.Price.ToString("#,0") تومان
                        </p>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Source)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Destination)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Recipt)
                    </td>
                    <td>
                        @Html.Raw(item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.FullName)
                    </td>

                    <td>
                        <p class="text-primary font-weight-bold">
                            @item.UpDateTime?.ToShamsi()
                        </p>
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-icon-warning font-weight-bold" title="ویرایش" asp-route-id="@item.PaymentId"><i class="far fa-edit"></i></a>
                        <a asp-action="Details" class="btn btn-icon-info font-weight-bold" title="شرح" asp-route-id="@item.PaymentId"><i class="fas fa-info-circle"></i></a>
                        @if (User.IsInRole("SuperAdmin"))
                        {
                            <a asp-action="Delete" class="btn btn-icon-danger font-weight-bold" title="حذف" asp-route-id="@item.PaymentId"><i class="fas fa-trash"></i></a>
                        }
                    </td>
                    <td>
                        <a asp-action="Send" class="btn btn-icon-success font-weight-bold" title="پیامک" asp-route-id="@item.PaymentId"><i class="fas fa-comment-alt"></i></a>
                    </td>
                </tr>
                row++;
            }
        <tr>
            <td colspan="2" class="text-black-50 font-weight-bold">مجموع</td>
            <td colspan="1" class="text-center font-weight-bold text-primary">@Model.Item1.Sum(c => c.Price).ToString("#,0") تومان</td>
        </tr>
        </tbody>
    </table>
</div>
<div class="container">
    @if (Model.Item2 > 1)
    {
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= Model.Item2; i++)
                {
                    <li class="page-item">
                        @if (!string.IsNullOrEmpty(query))
                        {
                            <a class="page-link" href="/Admin/Payments/Index?pageId=@i&search=@query">
                                @i
                            </a>
                        }
                        else
                        {
                            <a class="page-link" href="/Admin/Payments/Index?pageId=@i">
                                @i
                            </a>
                        }
                    </li>
                }


            </ul>
        </nav>
    }

</div>