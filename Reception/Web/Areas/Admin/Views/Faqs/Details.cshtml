@using Common.Library
@model Model.Entities.Faq

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h1 class="card-title">شرح سوال</h1>

    <div>

        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FaqTitle)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FaqTitle)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FaqAnswer)
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(Model.FaqAnswer)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.InsertDate)
            </dt>
            <dd class="col-sm-10">
                <p class="text-primary font-weight-semi-bold">@Model.InsertDate.ToShamsi()</p>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserId)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model.FaqId">ویرایش سوال</a>
        <a asp-action="Index" class="btn btn-info">بازگشت به لیست</a>
    </div>

</div>
