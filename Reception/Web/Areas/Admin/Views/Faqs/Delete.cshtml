@using Common.Library
@model Model.Entities.Faq

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h1 class="card-title">حذف سوال</h1>

    <h3>آیا از حذف سوال اطمینان دارید؟</h3>
    <div>

        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FaqTitle)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FaqTitle)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FaqAnswer)
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(Model.FaqAnswer)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.InsertDate)
            </dt>
            <dd class="col-sm-10">
                <p class="text-primary font-weight-semi-bold">@Model.InsertDate.ToShamsi()</p>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserId)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="FaqId" />
            <input type="submit" value="حذف سوال" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-info">بازگشت به لیست</a>
        </form>
    </div>
</div>

