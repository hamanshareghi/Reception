@model IEnumerable<Model.Entities.ProductGroup>

@{
    ViewData["Title"] = "Index";
}

<h4 class="card-title">دسته بندی محصولات </h4>
<hr />
<p>
    <a class="btn btn-success" asp-action="Create">گروه جدید</a>
</p>
<table class="table table-bordered table-striped table-responsive">
    <thead>
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.Company)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.GroupName)
        </th>
       
        <th>دستورات</th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.Company.Title)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.GroupName)
        </td>
        
        <td>
            <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.ProductGroupId"><i class="far fa-edit"></i></a>
            <a asp-action="Details" class="btn btn-info" asp-route-id="@item.ProductGroupId"><i class="fas fa-info-circle"></i></a>
            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ProductGroupId"><i class="fas fa-trash"></i></a>
        </td>
    </tr>
}
    </tbody>
</table>
