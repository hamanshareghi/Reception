@model IEnumerable<Model.Entities.ApplicationUser>

<h4 class="card-title"> مشتریان </h4>
<hr />
<p>
    <a asp-controller="Customer" asp-action="AddCustomer" class="btn btn-success">ثبت مشتری جدید</a>
</p>
<table class="table table-bordered table-striped table-responsive">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerKind)
        </th>   
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>    
        <th>
            @Html.DisplayNameFor(model => model.Position)
        </th>

        <th>دستورات</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
               
            <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerKind)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>

            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id"><i class="far fa-edit"></i></a>
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i></a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
    }
    </tbody>
</table>


