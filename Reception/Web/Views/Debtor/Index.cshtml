@model IEnumerable<Model.Entities.Debtor>


<h1> بدهکاران</h1>
<hr />
<p>
    <a asp-action="Create" class="btn btn-success">بدهکار جدید</a>
</p>
<table class="table table-bordered table-striped table-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayStatus)
            </th>


            <th>دستورات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PayStatus)
                </td>

                <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.DebtorId"><i class="far fa-edit"></i></a>
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.DebtorId"><i class="fas fa-info-circle"></i></a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.DebtorId"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>


