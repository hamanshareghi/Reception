@using Common.Library
@model Model.Entities.Rule

<div class="container">
    <div>
        <h4 class="card-title">شرح قوانین</h4>

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Sale)
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(@Model.Sale)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Send)
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(@Model.Send)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Use)
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(@Model.Use)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Payment)
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(@Model.Payment)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Privacy)
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(@Model.Privacy)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.InsertDate)
            </dt>
            <dd class="col-sm-10">
                @Model.InsertDate.ToShamsi()
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UpDateTime)
            </dt>
            <dd class="col-sm-10">
                @Model.UpDateTime?.ToShamsi()
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model.Id">ویرایش قوانین</a>
        <a asp-action="Index" class="btn btn-info">بازگشت به لیست</a>
    </div>

</div>


