@model Model.Entities.Cost
<div class="container">
    <h4 class="card-title">هزینه</h4>
    <hr />
    <div class="row">
        <div class="col-md-10 mx-auto">
            <form asp-area="" asp-controller="Cost" asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                <div class="dropdown bootstrap-select form-control">

                    <select class="form-control selectpicker" asp-for="CostDefineId" data-live-search="true" tabindex="null" asp-items="ViewBag.CostDefineId">>
                      
                    </select>
                    @*<button type="button" tabindex="-1" class="btn dropdown-toggle btn-light" data-toggle="dropdown" role="combobox" aria-owns="bs-select-6" aria-haspopup="listbox" aria-expanded="false" title="هات داگ پنیری">
                        <div class="filter-option">
                            <div class="filter-option-inner">
                                <div class="filter-option-inner-inner"></div>
                            </div>
                        </div>
                    </button>*@
                    
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea type="text" id="editor" asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <input type="submit" value="ثبت اطلاعات" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-info">بازگشت به لیست</a>

                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/lib/ckeditor5/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'), {
                // The language code is defined in the https://en.wikipedia.org/wiki/ISO_639-1 standard.
                language: 'fa'
            })
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });
    </script>


}


