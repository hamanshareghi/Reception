@model IEnumerable<Model.Entities.Reception>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>لیست پذیرش</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table table-striped table-responsive table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Serial)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReceptionDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer)
                </th>

                <th>دستورات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Serial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReceptionDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer.Id)
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ReceptionId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ReceptionId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ReceptionId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
