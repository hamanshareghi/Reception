@model Model.Entities.RequestDevice
@using Common.Library
@{
    ViewData["Title"] = "Delete";
}

<h1>حذف درخواست</h1>

<h3>آیا از حذف درخواست اطمینان دارید؟</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ViewStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ViewStatus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd >
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd >
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InsertDate)
        </dt>
        <dd class = "col-sm-10">
            <p class="font-weight-bold text-primary"> 
                @Model.InsertDate.ToShamsi()
            </p>
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UpDateTime)
        </dt>
        <dd class = "col-sm-10">
            <p class="font-weight-bold text-primary"> 
                @Model.UpDateTime?.ToShamsi()
            </p>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="RequestDeviceId" />
        <input type="submit" value="حذف درخواست" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-info">بازگشت به لیست</a>
    </form>
</div>
