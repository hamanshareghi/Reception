@model Model.Entities.Brand


<div class="container">
    <h1 class="card-title">حذف یرند</h1>
    <hr />
    <h3>آیا از حذف برند اطمینان دارید؟</h3>
    <div>

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Image)
            </dt>
            <dd class="col-sm-10">
                <img src="~/img/Brand/@Model.Image" alt="@Model.Title" />
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="BrandId" />
            <input type="submit" value="حذف برند" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-info">بازگشت به لیست</a>
        </form>
    </div>

</div>
