@model IEnumerable<Model.Entities.Shipping>


<h1> باربری</h1>
<hr />
<p>
    <a asp-controller="Shipping" asp-action="Create" class="btn btn-success">باربری جدید</a>
</p>
<table class="table table-bordered table-striped table-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Driver)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>


            <th>دستورات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Driver)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contact)
                </td>

                <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.ShippingId"><i class="far fa-edit"></i></a>
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.ShippingId"><i class="fas fa-info-circle"></i></a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ShippingId"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>


